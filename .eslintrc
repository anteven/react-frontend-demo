{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "react/prop-types": 0,
    "react/no-unused-prop-types": 0,
    "key-spacing"          : "off",
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : 0,
    "object-curly-spacing" : [2, "always"],
    "comma-dangle"         : "off",
    "no-unused-expressions": 0,
    "no-useless-escape": 0,
    "no-debugger": 0,
    "no-extend-native": 0,
    "camelcase": 0,
    "one-var": 0,
    "eqeqeq": 0
  }
}
